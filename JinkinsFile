pipeline {
    agent any

    stages {
        stage ('GetProject') {
            steps {
                git 'https://github.com/sfinn030/SiobhanPetitions'
            }
        }

        stage ('build') {
            steps {
                sh 'mvn clean:clean'
                sh 'mvn dependency:copy-dependencies'
                sh 'mvn compiler:compile'
            }
        }

        stage ('Deploy') {
            steps {
                sh 'docker build -f Dockerfile -t myapp'
            }
        }
    }
}