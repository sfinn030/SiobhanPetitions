pipeline {
    agent any

    stages {
        stage ('GetProject') {
            steps {
                git 'https://github.com/sfinn030/SiobhanPetitions'
            }
        }

        stage ('build') {
            steps {
                sh 'mvn clean:clean'

            }

stage ('package') {
            steps {
                sh 'mvn package'

            }
        }

        stage ('Deploy') {
            steps {
                sh 'docker build -f Dockerfile -t myapp'
            }
        }
    }
}